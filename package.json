{
  "name": "joebateson.com",
  "description": "My site. Hello, World!",
  "scripts": {
    "build": "webpack --mode production && rm -rf dist/inlined-*",
    "develop": "yarn build && yarn start",
    "clean": "rm -rf dist && rm -rf node_modules",
    "start": "http-server dist",
    "serve:lhci": "yarn start",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:lint": "eslint .",
    "test:e2e": "start-server-and-test develop http://localhost:8080 cy:open",
    "test:e2e:ci": "start-server-and-test develop http://localhost:8080 cy:run",
    "size": "yarn build && size-limit"
  },
  "author": "Joe Bateson",
  "devDependencies": {
    "@jbateson/eslint-config": "2.3.0",
    "@lhci/cli": "^0.5.0",
    "@size-limit/preset-app": "^4.5.6",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "axe-core": "^4.0.1",
    "babel-eslint": "^10.1.0",
    "copy-webpack-plugin": "^6.2.1",
    "css-loader": "^4.3.0",
    "cypress": "^4.12.1",
    "cypress-axe": "^0.8.1",
    "eslint": "^6.3.0",
    "eslint-plugin-flowtype": "^4.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "1.x",
    "file-loader": "^6.1.1",
    "html-webpack-plugin": "^4.5.0",
    "http-server": "^0.12.3",
    "mini-css-extract-plugin": "^1.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "prettier": "^2.0.5",
    "purgecss-webpack-plugin": "^3.0.0",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "size-limit": "^4.5.6",
    "start-server-and-test": "^1.11.3",
    "terser-webpack-plugin": "^4.2.3",
    "url-loader": "^4.1.1",
    "watchpack": "2.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0"
  },
  "resolutions": {
    "watchpack": "2.0.0-beta.10"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "size-limit": [
    {
      "path": "dist/index.html",
      "limit": "100ms"
    }
  ]
}
